<div class="container">
    <div class="row" style="display: flex; align-items: center; height: 90vh;">
        <div class="col-7" style="padding:0;">
            <img src="/img/pat_log.jpg" alt="#" style="max-width:100%; height:auto;"/>
        </div>
        <div class="col-5" style="padding:0;">
            <form>
                <span class="log-title">Patient Login</span>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control log-input" id="floatingInput" placeholder="Email">
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control log-input" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>
                <p>Do not have an account?<span><a class="log-signup" id="patientSignUp" asp-area="" asp-controller="Patient" asp-action="SignUp">Sign Up</a></span></p>

                <button type="submit" class="btn" style="background-color: #1A76D1; color:white;">Login</button>
            </form>
        </div>
    </div>
</div>
<style>
    span.log-title {
        width: 100%;
        display: block;
        font-size: 35px;
        color: #333;
        line-height: 1.2;
        text-align: center;
        padding-bottom:50px;
    }
    .log-input {
        border: 1px solid #e6e6e6;
        margin-bottom: 15px;
        border-radius: 10px;
        display: flex;
        flex-wrap: wrap;
        align-items: flex-end;
        width: 100%;
        height: 80px;
    }
    a.log-signup {
        text-decoration: none;
        color: #1A76D1;
        padding-left:5px;
    }
</style>