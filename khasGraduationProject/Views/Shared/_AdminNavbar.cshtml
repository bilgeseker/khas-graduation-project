                                    <a href="mailto:ferihan.hacialioglus@stu.khas.edu.tr">ferihan.hacialioglus@stu.khas.edu.tr</a>
                                </b>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Footer Top -->
        <!-- Copyright -->
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="copyright-content">
