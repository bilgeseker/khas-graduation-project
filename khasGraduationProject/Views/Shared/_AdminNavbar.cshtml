    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/css/animate.min.css" asp-append-version="true">
    <!-- Magnific Popup CSS -->
    <link rel="stylesheet" href="~/css/magnific-popup.css" asp-append-version="true">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" asp-append-version="true" />
